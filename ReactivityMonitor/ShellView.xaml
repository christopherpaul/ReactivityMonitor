<Window x:Class="ReactivityMonitor.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:defs="clr-namespace:ReactivityMonitor.Definitions"
        >
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Header="Display">
                <Button Content="Pause" Command="defs:Commands.Pause" />
                <Button Content="Go" Command="defs:Commands.Go" />
            </ToolBar>
            <ToolBar Header="Event list">
                <Button Content="Clear" Command="defs:Commands.ClearEventList" />
                <ToggleButton Content="Filter to tab" Command="defs:Commands.FilterEventList" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" />
            </ToolBar>
        </ToolBarTray>
        
        <ContentControl x:Name="ActiveItem" />
    </DockPanel>

</Window>