<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ReactivityMonitor.Resources"
                    xmlns:cvt="clr-namespace:ReactivityMonitor.Infrastructure.Converters">
    <cvt:VisibilityConverter x:Key="HiddenWhenNullConverter" HiddenWhenEqualTo="{x:Null}" Default="Visible" />
    <cvt:VisibilityConverter x:Key="VisibleWhenTrue" VisibleWhenEqualTo="{x:Static local:Constants.True}" Default="Collapsed" />

</ResourceDictionary>